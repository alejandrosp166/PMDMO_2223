<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Tabla"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temperaturas"
            android:textSize="19dp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="DIC 7 "
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textStyle="bold" />

        <TextView android:layout_width="75dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="DIC 8 "
            android:textColor="@color/red"
            android:textStyle="bold" />

        <TextView android:layout_width="75dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="DIC 9 "
            android:textColor="@color/red"
            android:textStyle="bold" />

        <TextView android:layout_width="75dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="DIC 10"
            android:textColor="@color/red"
            android:textStyle="bold" />

        <TextView android:layout_width="75dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="DIC 11"
            android:textColor="@color/red"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Máximas"
            android:layout_span="1"
            android:textAlignment="textStart"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="28º" />

        <TextView android:layout_width="75dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="26º" />

        <TextView android:layout_width="75dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="23º" />

        <TextView android:layout_width="75dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="17º" />

        <TextView android:layout_width="75dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="19º" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="Mínimas"
            android:layout_span="1"
            android:textAlignment="textStart"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="15º" />

        <TextView android:layout_width="75dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="14º" />

        <TextView android:layout_width="75dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="3º" />

        <TextView android:layout_width="75dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="5º" />

        <TextView android:layout_width="75dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="6º" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:layout_span="1"
            android:textAlignment="textStart"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:src="@drawable/soleado" />

        <TextView android:layout_width="75dp" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:src="@drawable/nublado" />

        <TextView android:layout_width="75dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:src="@drawable/soleado" />

        <TextView android:layout_width="75dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:src="@drawable/lluvia" />

        <TextView android:layout_width="75dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:src="@drawable/nublado" />
    </TableRow>

</TableLayout>